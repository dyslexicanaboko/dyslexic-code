@using TaskListPoolWebApi.Models
@model IEnumerable<TaskListPoolLib.TaskGroup_GetAllWithSummary_Result>

@{
    Layout = "~/Views/Shared/_LayoutRegular.cshtml";
}
@Scripts.Render("~/Scripts/Controllers/taskPoolController2.js")
@Scripts.Render("~/Scripts/Controllers/taskGroupsController.js")

@Html.ActionLink("All tasks", "Index")
<table id="tblTaskGroupsModel" class="table">
    <thead>
        <tr>
            <th>Group</th>
            <th>Description</th>
            <th>Created On</th>
            <th>Tasks</th>
            <th><span class="glyphicon glyphicon-cog"></span></th>
        </tr>
    </thead>
    <tbody>
        @*This is where the template is applied for all elements of this model*@
    </tbody>
    <tfoot>
        <tr>
            <td>
                <input id="taskGroup_txtName0" type="text" />
            </td>
            <td>
                <input id="taskGroup_txtDescription0" type="text" />
            </td>
            <td />
            <td />
            <td>
                <button id="btnTaskGroupAdd"
                        class="btn btn-info btn-md"
                        onclick="taskGroupController.btnTaskGroupAdd_click()">
                    <span class="glyphicon glyphicon-plus-sign"></span>
                </button>
            </td>
        </tr>
    </tfoot>
</table>

<div id="dialog-form" title="Tasks">
    <form>
        <fieldset>
            <label for="name">Task Group Id</label>
            <input type="text" id="txtTargetTaskGroupId" value="" class="text ui-widget-content ui-corner-all">
            <div id="divTasksForGroup">
                @*The tasks for the current group will go here*@
            </div>
        </fieldset>
    </form>
</div>

@*This table's id name should not change so that the associated JavaScript file can find it always*@
<table id="tblTaskGroupsTemplate" style="visibility:hidden;">
    <tr id="taskGroup_row_id0">
        <td>
            <span id="taskGroup_lblName_id0" style="display:inline-block;"></span>
            <input type="text" id="taskGroup_txtName_id0" style="display:none;" />
        </td>
        <td>
            <span id="taskGroup_lblDescription_id0" style="display:inline-block;"></span>
            <input type="text" id="taskGroup_txtDescription_id0" style="display:none;" />
        </td>
        <td>
            <span id="taskGroup_lblCreatedOn_id0" />
        </td>
        <td>
            <span id="taskGroup_lblTaskCount_id0">0</span>
        </td>
        <td>
            <div id="taskGroup_divReg_id0" style="display:inline-block;">
                <button id="btnTaskGroupEdit_id0"
                        class="btn btn-info btn-md"
                        onclick="taskGroupController.btnEditToggle_click(_id0, true)">
                    <span class="glyphicon glyphicon-pencil"></span>
                </button>
                <button id="btnTaskGroupDelete_id0"
                        class="btn btn-info btn-md"
                        onclick="taskGroupController.btnTaskGroupDelete_click(_id0)">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </div>
            <div id="taskGroup_divEdit_id0" style="display:none;">
                <button id="btnTaskGroupOk_id0"
                        class="btn btn-info btn-md"
                        onclick="taskGroupController.btnTaskGroupEdit_click(_id0);">
                    <span class="glyphicon glyphicon-ok-sign"></span>
                </button>
                <button id="btnTaskGroupCancel_id0"
                        class="btn btn-info btn-md"
                        onclick="taskGroupController.btnEditToggle_click(_id0, false);">
                    <span class="glyphicon glyphicon-remove-sign"></span>
                </button>
            </div>
            <button id="btnAddTasksToGroup_id0"
                    class="btn btn-info btn-md"
                    onclick="taskGroupController.btnShowTaskAddModal_click(_id0, '@Url.Action("GetTasksByTaskGroupId", "TaskList", new TaskListModel { TaskGroupId = 0, RenderJsBundles = false, RenderJsController = false } )')" >
                <span class="glyphicon glyphicon-list"></span>
            </button>
        </td>
    </tr>
</table>
<script type="text/javascript">taskGroupController.page_load("tblTaskGroupsTemplate", "tblTaskGroupsModel");</script>
